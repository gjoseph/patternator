{
  "name": "svg-patterns",
  "version": "0.0.1",
  "engines": {
    "node": "14.16.0",
    "npm": "7.6.3"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "npm run build-ts && npm test && npm run bundle # && npm run gts-check",
    "build-ts": "tsc -p .",
    "bundle": "rollup dist/index.js --plugin node-resolve --plugin commonjs --file dist/index.mjs --format esm",
    "watch": "tsc --watch",
    "test": "jest",
    "gts-check": "gts check",
    "gts-clean": "gts clean",
    "gts-fix": "gts fix",
    "setup-husky": "npm rebuild husky # much faster than the npm install --save-dev husky documented alternative",
    "prettier-check-all": "prettier --check .",
    "prettier-fix-all": "prettier --write ."
  },
  "dependencies": {
    "eve": "0.5.4",
    "snapsvg": "0.5.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "20.0.0",
    "@rollup/plugin-node-resolve": "13.0.4",
    "@types/jest": "26.0.24",
    "@types/snapsvg": "0.5.1",
    "gts": "3.1.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1",
    "rollup": "2.56.2",
    "ts-jest": "27.0.4",
    "typescript": "4.3.5"
  },
  "//tslib": "2.3.0",
  "//": "Also see .prettierignore -- https://github.com/prettier/prettier/issues/4708",
  "prettier": {
    "useTabs": false
  }
}
